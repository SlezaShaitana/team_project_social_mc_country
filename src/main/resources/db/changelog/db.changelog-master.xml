<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.6.xsd">

    <changeSet id="createCountryTable" author="postgres">
        <createTable tableName="country">
            <column name="id" type="varchar(255)">
                <constraints primaryKey="true"/>
            </column>
            <column name="is_deleted" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="country_title" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="createCityTable" author="postgres">
        <createTable tableName="city">
            <column name="id" type="varchar(255)">
                <constraints primaryKey="true"/>
            </column>
            <column name="is_deleted" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="city_title" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="country_id" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

</databaseChangeLog>